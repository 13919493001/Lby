  methods: {
    //提交注册
    submit(form) {
      console.log(form);
      let params = {
        account:form.phone,
        captcha:form.code2,
        password:form.pwd,
        code:form.code1
      };
      if(form.check===true){
        api.login.register(params).then(res => {
          console.log(res)
          if(res.status ===200) {
            this.$message({
                message: res.msg,
                type: 'success'
              });
            this.$router.push('/login')
          } else {
            this.$message.error(res.msg);
          }
        })
      }else {
         this.$message({
          message: '请勾选用户协议',
          type: 'warning'
        });
      }
    },
    //获取验证码
    sendcode(form) {
      console.log(form)
      api.login.getVerify(form.phone).then(res => {
        console.log(res,form.phone)
        if(res.status ===200) {
          this.$message({
              message: res.msg,
              type: 'success'
            });
        } 
        else {
          this.$message.error(res.msg);
        }
      })
    },
    open() {
      this.dialogVisible = true;
    },
    getCode(){
      this.a+=1
      this.imgCode="http://192.168.1.31:8087/api/captcha?t="+this.a
    }
  },
  mounted(){
    this.imgCode="http://192.168.1.31:8087/api/captcha"
