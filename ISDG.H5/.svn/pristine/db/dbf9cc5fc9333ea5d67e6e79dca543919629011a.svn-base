//首页相关接口管理
import axios from "../axios";
const home = {
  //首页数据
  banner() {
      return axios.get('/api/index')
  },
  //商品相关接口
    //获取产品分类
  goodsMenu() {
    return axios.get('/api/category')
  },
  //获取商品列表
  getGoods(params) {
    return axios.get(`/api/products`,params)
  },
  //产品详情
  goodsDetail(id) {
    return axios.get(`/api/product/detail/`+id)
  }
}
export default home;