<script>
import info from "@/components/market/info";
import mAddress from "@/components/market/address";
import api from "@/plugins/api/api";
export default {
  components: {
    info,
    mAddress
  },
  data() {
    return {
      dialogVisible: false,
      idList:[],
      num:0,
      // cartId:"",
      // orderKey:"",
      addressId:"",
      mark:"",
      comNum:1,
      groupId:0,
      payType:"zhifubao",
      numList:[],
      usual:false,
      Integrals:0,
      cartIds:"",
      payMoney:0,//多个商品总价
      couponId:0,
      payPrice:0,
      payText:""
    };
  },
  methods: {
    changeActive(a){
      this.payType=a
      console.log(a);
       if(this.payType=="zhifubao"){
        this.payText="支付宝"
      }else if(this.payType=="weixin"){
        this.payText="微信"
      }else{
        this.payText="银联"
      }
    },
    order(data) {
      this.payPrice=data.payPrice
      console.log(data);
						api.personal.getAddressDefault().then((res)=>{
              console.log(res);
              
                this.addressId=res.data[0].id
                api.home.orderGreate(data.orderKey,{addressId:this.addressId,couponId:this.couponId,payType:this.payType,mark:this.mark,useIntegral:data.useIntegral,coupId:"0"}).then((res)=>{
								if(res.status==200){
                  this.dialogVisible = true;
                }
						})
            })
    },
    UserInfo(data){
      this.mark=data.etc
      
    },
    changeCoupon(data){
      console.log(data);
      this.couponId=data
    }
  },
  created(){
    this.idList=this.$route.query.id
    this.num=this.$route.query.num
    this.comNum=this.$route.query.comNum
    this.groupId=this.$route.query.groupId
    this.numList=this.$route.query.numList
    this.usual=this.$route.query.usual
    this.Integrals=this.$route.query.integral
    this.cartIds=this.$route.query.cartId
    this.payMoney=this.$route.query.payMoney
    console.log(this.$route.query);
    
  }
};
</script>

