  <div class="order">
    <div class="content">
      <m-address @userInfo="UserInfo" @changeActive="changeActive" />
      <info @order="order" :idList='idList' :num='num' :comNum="comNum" :groupId="groupId" :numList="numList" :usual="usual" :Integrals="Integrals" :cartIds="cartIds" :payMoney="payMoney" @changeCoupon="changeCoupon" />
    </div>
    <el-dialog :title="payText" :visible.sync="dialogVisible" center class="pay-dialog">
      <div class="dialog-content">
        <div class="code">
          <img src="" alt="" />
        </div>
        <div class="tips">
          <div class="tip1">
            <div>总计：</div>
            <span>￥{{payPrice}}</span>
          </div>
          <div class="tip2">
            <div>- 请使用
              <span>{{payText}}</span>
              扫描左图二维码进行支付</div>
            <div>- 请您在1小时内付款以免订单被取消，如有疑问，请联系客服。</div>
            <div>- 订单发货后您将收到订</div>
          </div>
          <div class="tip3">手机不在身边？可 <span>登录帐号付款</span></div>
        </div>
      </div>
