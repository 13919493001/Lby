<template>
  <div :class="{ login: type === 'nor', popover: type === 'popover' }">
    <div class="content">
      <div class="title">
        <div @click="toggle(0)" :class="{ active: active === 0 }">
          账户登录
        </div>
        <div @click="toggle(1)" :class="{ active: active === 1 }">
          快捷登录
        </div>
      </div>
      <my-form
        :status="4"
        :placeholder="quickLogin"
        @submit="submit1"
        :imgCode="imgCode"
        @getCode="getCode"
        @sendcode="sendcode"
        v-if="active === 1"
      />
      <my-form
        :status="5"
        :placeholder="login"
        :imgCode="imgCode"
        @getCode="getCode"
        @submit="submit2"
        v-if="active === 0"
      />
    </div>
  </div>
</template>

<script>
import banner from "@/components/common/banner";
import myForm from "@/components/form";
import api from "@/plugins/api/api";
export default {
  components: {
    banner,
    myForm
  },
  props: {
    type: {
      type: String,
      default: "nor"
    }
  },
  data() {
    return {
      quickLogin: {
        p1: "请输入注册手机号",
        p2: "请输入短信验证码",
        p3: "发送短信",
        p4: "登录"
      },
      login: {
        p1: "请输入注册手机号",
        p3: "验证码",
        p4: "登录",
        p5: "登录密码"
      },
      active: 0,
      imgCode:""
    };
  },
  methods: {
    //
    submit2(form) {
      console.log(form);
      let params = {account:form.phone, password:form.pwd}
      api.login.login(params).then(res => {
        console.log(res.msg)
        if(res.status === 200) {
          this.$router.push('/');
          this.$message({
              message: res.msg,
              type: 'success'
            });
            // this.$store.commit("login_success");
            sessionStorage.setItem("userToken",res.data.token)
            sessionStorage.setItem("isLogin",true)
            this.$store.dispatch("setToken",res.data.token)
            console.log(this.$store.state.isLogin)
        } else {
          this.$message.error(res.msg);
        }
      })
    },
    //快捷登录
    submit1(form) {
      console.log(form);
      let params = {account:form.phone, password:form.pwd}
      api.login.quickLogin(params).then(res => {
        console.log(res)
        if(res.status === 200) {
          this.$message({
              message: res.msg,
              type: 'success'
            });
          this.$router.push('/');
          // this.$store.commit("login_success");
        } else {
            this.$message.error(res.msg);
        }
      })
    },
    sendcode(form) {
      console.log(form)
      let params = {phone:form.phone}
        api.login.getVerify(params).then(res => {
          console.log(res)
          if(res.status === 200) {
            this.$message({
              message: res.msg,
              type: 'success'
            });
          } else {
            this.$message.error(res.msg);
          }
        })
    },
    toggle(id) {
      this.active = id;
    },
    getCode(){
      api.login.getCaptcha().then((res)=>{
        this.imgCode=res
        this.imgCode=this.imgCode.replace(/"/ig,"")
      })
    }
  },
  mounted(){
    api.login.getCaptcha().then((res)=>{
        this.imgCode=res
        this.imgCode=this.imgCode.replace(/"/ig,"")

    })
  }
};
</script>

